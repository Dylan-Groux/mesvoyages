<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}SOREDAR{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('CSS/accueil.css') }}">
    {% endblock %}
</head>
<body>
    <!-- En-tête -->
    {% block top %}{% endblock %}

    <!-- Grille de cartes -->
    <div class="container my-5">
        <div class="row justify-content-center">
            <!-- Carte Accueil -->
            <div class="col-md-4 d-flex align-items-stretch">
                <div class="card">
                    <img src="images/cyprus_acc.jpg" class="card-img-top img-uniform" alt="Image Accueil">
                    <div class="card-body text-center">
                        <p class="description">Rester à l'affut de nos suberbe voyages</p>
                        <a class="btn" href="{{ path('contact') }}">Contact</a>
                    </div>
                </div>
            </div>
    
            <!-- Carte Voyages -->
            <div class="col-md-4 d-flex align-items-stretch">
                <div class="card">
                    <img src="images/costa-brava_acc.jpg" class="card-img-top img-uniform" alt="Image Voyages">
                    <div class="card-body text-center">
                        <p class="description">Récits de nos voyages et découvertes exotiques</p>
                        <a class="btn" aria-current="page" href="{{ path('voyages') }}">Voyages</a>
                    </div>
                </div>
            </div>
    
            <!-- Carte Galerie -->
            <div class="col-md-4 d-flex align-items-stretch">
                <div class="card">
                    <img src="images/london_acc.webp" class="card-img-top img-uniform" alt="Image Galerie">
                    <div class="card-body text-center">
                        <p class="description">Une collection de photos uniques de nos destinations</p>
                        <a class="btn" aria-current="page" href="{{ path('voyages') }}">Galerie</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container my-2 ">
        <div class="row justify-content-center g-3 "> 
            <div class="text-center p-2 fs-5">
                <h1>NOS DERNIERS VOYAGES <h1>
            </div>
            {% for visite in latestVisites %}
                <div class="col-md-5 d-flex align-items-stretch  p-5"> 
                    <ul class="list-unstyled">
                        <li class="text-center p-2">
                            <strong class="p-2">{{ visite.ville }}</strong> - {{ visite.datecreationstring }}
                            <img src="{{ app.request.getBasePath() ~ vich_uploader_asset(visite, 'imageFile') }}" class="card-img-top img-uniform">
                            <p>{{ visite.avis|length > 50 ? visite.avis[:50] ~ '...' : visite.avis }}</p>
                            <a class="btn" href="{{ path('voyages.showone', { 'id': visite.id }) }}">
                                Voir plus sur {{ visite.ville }}
                            </a>
                        </li>
                    </ul>
                </div>
            {% endfor %}
        </div>
    </div>
    


    <!-- JavaScript de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
