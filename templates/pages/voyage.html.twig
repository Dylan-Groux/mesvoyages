{% extends "base.html.twig" %}

{% block body %}
    <div class="container mt-5">
        <!-- Section de titres -->
        <div class="row text-center mb-4">
            <div class="col-12">
                <h1 class="title">{{ visite.ville }}</h1>
                <h2 class="title"> {{ visite.pays}}</h2>
                <h3 class="title">{{ visite.datecreationstring }}</h3>
                    <strong>
                        {% if visite.note<10 %}
                        <div class="text-danger">
                            {{ visite.note}}/20
                        </div>
                        {%  else  %}
                        <div class="text-success">
                            {{ visite.note }}/20
                        </div>
                        {% endif %}
                    </strong>
                <h5 class="title">Départ à {{ visite.tempmax }}°, Arriver à {{ visite.tempmin }}°</h5>
                <h6 class='title'><strong>Environnements</strong></h6>
                {% for environnement in visite.environnements %}
                {{ environnement.nom }}
                {% endfor %} 
            </div>
        </div>

        <!-- Section photo et avis -->
        <div class="col text-center justify-center align-center">
            <!-- Emplacement photo -->
            <div class="col mb-3">
                <div class="photo-placeholder text-center p-4">
                        {% if visite.imageName %}
                            <img src="{{ app.request.getBasePath() ~vich_uploader_asset(visite, 'imageFile') }}" class="card-img-top" style="max-width:100%; height:auto;">
                        {% else %}
                            <p>Aucune Image</p>
                        {% endif %}
                </div>
            </div>
            <!-- Emplacement avis -->
            <div class="col mb-3">
                <div class="avis-placeholder text-center p-4">
                    <blockquote class="blockquote">
                        <p class="mb-0">"Ceci est un exemple d'avis. Un excellent produit que je recommande !"</p>
                        <footer class="blockquote-footer mt-3">Client satisfait</footer>
                    </blockquote>
                </div>
            </div>
        </div>
    </div>
{% endblock %}